{
    "version": 2,
    "builds": [{
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "frontend/dist",
            "buildCommand": "cd frontend && npm install --legacy-peer-deps --force && npm run build"
        }
    }],
    "routes": [{
        "src": "/(.*)",
        "dest": "frontend/dist/$1"
    }],
    "rewrites": [{
        "source": "/(.*)",
        "destination": "/frontend/dist/index.html"
    }]
}